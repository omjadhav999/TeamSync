{
  "compilerOptions": {
    
    "target": "ES2021",
    
    "module": "commonjs",
    "rootDir": "./src",
  
    "outDir": "./dist",
    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    
    "skipLibCheck": true,

    "types": ["node", "express"] 
  },
  "include": ["src/**/*.ts", "@types"],
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts"]
}
